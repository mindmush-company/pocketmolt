FROM node:22-alpine

WORKDIR /app

RUN corepack enable pnpm

COPY package.json pnpm-lock.yaml ./
RUN pnpm install --frozen-lockfile --prod=false

COPY tsconfig.json ./
COPY lib ./lib
COPY server ./server

ENV NODE_ENV=production
ENV CONFIG_API_PORT=8443

EXPOSE 8443

CMD ["pnpm", "tsx", "server/config-api.ts"]
